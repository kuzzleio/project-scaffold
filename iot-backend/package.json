{
  "name": "kuzzle-application",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "clean": "touch app.ts && npm run build | grep TSFILE | cut -d' ' -f 2 | xargs rm",
    "dev": "NODE_ENV=development npx ergol app.ts -c ergol.config.json",
    "docker": "docker-compose run kuzzle",
    "docker:dev": "docker-compose up",
    "docker:npm": "docker-compose run kuzzle npm",
    "docker:npm:install": "npm run docker:npm install",
    "docker:npm:reinstall": "sudo rm -rf node_modules && npm run docker:npm:install",
    "services": "npx kourou app:start-services",
    "test": "npm run test:lint && npm run test:unit && npm run test:functional",
    "test:functional": "cucumber-js --exit --fail-fast",
    "test:lint": "eslint ./lib --ext .ts --config .eslintrc.json",
    "test:lint:fix": "eslint ./lib --ext .ts --config .eslintrc.json --fix"
  },
  "main": "app.ts",
  "license": "Apache-2.0",
  "dependencies": {
    "@kuzzleio/dashboard-builder": "^0.6.1",
    "@kuzzleio/iot-backend": "^3",
    "@kuzzleio/plugin-multi-tenancy": "^1.1.3",
    "@kuzzleio/plugin-workflows": "^0.4.6",
    "@kuzzleio/scheduler": "^1.1.7",
    "kuzzle": "^2",
    "kuzzle-device-manager": "^2.0.0",
    "kuzzle-plugin-hermes-messenger": "^0.3.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "cucumber": "^6.0.5",
    "ergol": "^1.0.2",
    "eslint-plugin-kuzzle": "^0.0.6",
    "should": "13.2.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "files": [
    "dist/**/"
  ]
}
