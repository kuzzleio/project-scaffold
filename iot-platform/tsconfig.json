{
  "compilerOptions": {
    "lib": ["ES6"],
    "declaration": true,
    "listEmittedFiles": true,
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "dist/"
  },
  "rootDir": "lib/",
  "include": [
    "app.ts",
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
